"noremap d h
"noremap h j
"noremap t k
"noremap n l
"noremap e d
"noremap E D
"noremap l n
"noremap L N
"noremap s :
"noremap ` ^
"noremap k e
"noremap K E

" largeur du texte
set textwidth=1000
" on garde d'une ligne a l'autre l'indentation d'un paragraphe
set autoindent
" smartindenting (clever autoindenting)
set si
" line numbers
set number
" remplace des shiftwidth au lieu des tab
set expandtab
set softtabstop=4
" a <tab> in an indent inserts 'shiftwidth' spaces (not tabstop)
"set smarttab
" number of spaces the tab stands for
set tabstop=4
" make searches case-insensitive, unless they contain upper-case letters:
set ignorecase
" on n'ignore pas les majuscules
set smartcase

