# echo "** In  .zsh_alias **"

# Gestion de la couleur pour 'ls' (exportation de LS_COLORS)
if [ -x /usr/bin/dircolors ]
then
  if [ -r ~/.zsh_dir_colors ]
  then
    eval "`dircolors ~/.zsh_dir_colors`"
  elif [ -r /etc/dir_colors ]
  then
    eval "`dircolors /etc/dir_colors`"
  else
    eval "`dircolors`"
  fi
fi

# Gestion du 'ls' : couleur & ne touche pas aux accents
alias ls='ls --classify --tabsize=0 --literal --color=auto --show-control-chars --human-readable'

# Raccourcis pour 'ls'
alias l='ls -l'
alias la='ls -a'
alias ll='ls -la'
alias lt='ls -rtalFh'
alias lS='ls -rtalFhS'

# Demande confirmation avant d'Ã©craser un fichier
alias cp='cp'
alias mv='mv'
alias rm='rm -f'

# Quelques alias pratiques
alias h='history'
alias c='clear'
alias less='less --quiet'
alias s='cd ..'
alias df='df --human-readable'
alias du='du --human-readable'
alias m='more'
alias md='mkdir'
alias rd='rmdir'
alias ap='cd ..;pwd'
alias app='cd ../..;pwd'
alias appp='cd ../../..;pwd'
alias apppp='cd ../../../..;pwd'
alias appppp='cd ../../../../..;pwd'
alias apppppp='cd ../../../../../..;pwd'
alias appppppp='cd ../../../../../../..;pwd'
alias apppppppp='cd ../../../../../../../..;pwd'
alias appppppppp='cd ../../../../../../../../..;pwd'

alias so='source'
alias xx='exit'
alias ki='kill -9 \!*'

# Process
alias pss='ps -edf | grep greg | more'
alias pst='pss | grep firefox | grep -v grep; pss | grep thunder | grep -v grep; pss | grep skype | grep -v grep'
alias psnx='pss | grep nx | grep -v grep'

# Programmes
alias upgrade='apt-get update && apt-get upgrade && apt-get clean'
alias fr='setxkbmap fr'
alias v='vim -g -geom 100x50 \!*'
alias tk='tkdiff \!*'
alias tkg='git tkdiff \!*'
alias tkgc='git tkdiffc \!*'
alias it='install_tools \!*'
alias webex='export LD_LIBRARY_PATH="/opt/java/jre-8u25_i586/lib/i386:/opt/java/jre-8u25_i586/lib/i386/client"; linux32 firefox'
alias ce='soffice /home/gregory/perso/ce/ce-activity.ods &'

# Git
alias gsta='git status \!*'
alias gst='git status -uno \!*'
alias gci='git commit -m \!*'
alias glog='git log --name-status \!*'

# Machines
alias ss='ssh -XY \!*'
alias ssp='ssh -X gregory@portable'
alias ssc='ssh -X gregory@chablis'
alias ssk='ssh -X gregory@kenny'
alias ssz='ssh -X gregory@mazis'
alias ssf='ssh -Y fpga@kenny'
alias sse='ssh -Y edatools@kenny'

