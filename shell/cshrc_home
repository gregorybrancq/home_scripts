#echo "** In  .cshrc **"

## 
## Common files
## 

if (-r ~/.csh_common) then
    source ~/.csh_common
endif

if (-r ~/.csh_alias) then
    source ~/.csh_alias
endif

if (-r ~/.git-completion.csh) then
    source ~/.git-completion.csh
endif


## 
## Account Part
## 

# VIM
#setenv EDITOR gvim
setenv VIMRUNTIME "/usr/share/vim/vim74"
setenv VIMRC $HOME/Greg/work/env/vim

## PATH
foreach incr_path ( $HOME/Greg/work/bin )
    if (-d $incr_path) then
        if ($?PATH) then
            set path_status=""
            set path_status=`echo $PATH | grep "$incr_path"` >> /dev/null
            if ($#path_status == "0") then
                setenv PATH ${incr_path}:"${PATH}"
            endif
        else
            setenv PATH "${incr_path}"
        endif
    endif
    unset path_status
end


#echo "** Out .cshrc **"
